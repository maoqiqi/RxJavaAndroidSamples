<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/h1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_map"
            style="@style/btn_style"
            android:text="@string/map" />

        <Button
            android:id="@+id/btn_flat_map"
            style="@style/btn_style"
            android:text="@string/flat_map" />

        <Button
            android:id="@+id/btn_scan"
            style="@style/btn_style"
            android:text="@string/scan" />

        <Button
            android:id="@+id/btn_group_by"
            style="@style/btn_style"
            android:text="@string/group_by" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/h2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/h1">

        <Button
            android:id="@+id/btn_buffer"
            style="@style/btn_style"
            android:text="@string/buffer" />

        <Button
            android:id="@+id/btn_window"
            style="@style/btn_style"
            android:text="@string/window" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/h2">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sixteen"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/colorPrimaryDark" />
    </ScrollView>
</android.support.constraint.ConstraintLayout>