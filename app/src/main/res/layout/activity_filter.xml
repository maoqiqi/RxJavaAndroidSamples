<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/h1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_filter"
            style="@style/btn_style"
            android:text="@string/filter" />

        <Button
            android:id="@+id/btn_last"
            style="@style/btn_style"
            android:text="@string/last" />

        <Button
            android:id="@+id/btn_skip"
            style="@style/btn_style"
            android:text="@string/skip" />

        <Button
            android:id="@+id/btn_skip_last"
            style="@style/btn_style"
            android:text="@string/skip_last" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/h2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/h1">

        <Button
            android:id="@+id/btn_take"
            style="@style/btn_style"
            android:text="@string/take" />

        <Button
            android:id="@+id/btn_take_last"
            style="@style/btn_style"
            android:text="@string/take_last" />

        <Button
            android:id="@+id/btn_first"
            style="@style/btn_style"
            android:text="@string/first" />

        <Button
            android:id="@+id/btn_element_at"
            style="@style/btn_style"
            android:text="@string/element_at" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/h3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/h2">

        <Button
            android:id="@+id/btn_sample"
            style="@style/btn_style"
            android:text="@string/sample" />

        <Button
            android:id="@+id/btn_debounce"
            style="@style/btn_style"
            android:text="@string/debounce" />

        <Button
            android:id="@+id/btn_distinct"
            style="@style/btn_style"
            android:text="@string/distinct" />

        <Button
            android:id="@+id/btn_ignore_elements"
            style="@style/btn_style"
            android:text="@string/ignore_elements" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/h3">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sixteen"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/colorPrimaryDark" />
    </ScrollView>
</android.support.constraint.ConstraintLayout>